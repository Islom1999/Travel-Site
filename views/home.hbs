<header>
<div id="main-slider" class="h-[520px] relative font-prompt">
    {{#each HomeDB.slider}}
        <div
        class="h-full w-full absolute top-0 left-0 opacity-0 duration-300 main-slide"
        >
        <img
            src="{{img}}"
            alt="{{title}}"
            class="w-full h-full object-cover"
        />
        <div
            class="absolute w-[80%] left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 text-white"
        >
            <h3 class="text-[40px] font-bold">{{title}}</h3>
            <p class="text-[18px] mt-3">
            {{descr}}
            </p>
        </div>
        </div>
    {{/each}}
    <div class="hidden md:block">
    <button
        id="main-slider-prev"
        class="absolute z-10 top-1/2 -translate-y-1/2 left-10 text-[30px] text-white"
    >
        <i class="fa-solid fa-arrow-left-long"></i>
    </button>
    <button
        id="main-slider-next"
        class="absolute z-10 top-1/2 -translate-y-1/2 right-10 text-[30px] text-white"
    >
        <i class="fa-solid fa-arrow-right-long"></i>
    </button>
    </div>
</div>
</header>
<!-- ABOUT -->
<section class="container mx-auto px-6 my-40 relative">
<div
    class="p-0 md:px-[100px] lg:px-[200px] xl:px-[278px] text-center space-y-[31px] font-prompt"
>
    <div class="text-[35px] md:text-[40px] font-medium leading-[53px]">
    <img src="/assets/images/logo.png" alt="Logo" class="mx-auto" />
    </div>
    <p class="text-[18px] font-light leading-[31px] text-main-gray-100">
    {{HomeDB.section.descr}}
    </p>
</div>
<div class="pt-[60px] flex flex-wrap text-center text-[13px] text-main-gray-100 font-prompt font-normal tracking-[.65px]">
    {{#each HomeDB.section.statis}}
        {{#if number}}
            <div class="w-full md:w-1/2 pt-10 md:pl-[105px] md:pt-[50px]lg:p-0 lg:w-1/5">
            <i
                class="fa-solid fa-expand text-[70px] text-main-green-100 duration-150 hover:-translate-y-1"
            ></i>
            <p class="pt-3">{{content}}</p>
            </div>
        {{else}}
            <div class="w-full md:w-1/3 lg:w-1/5 pt-10 md:p-0">
            <i
                class="fa-solid fa-expand text-[70px] text-main-green-100 duration-150 hover:-translate-y-1"
            ></i>
            <p class="pt-3">{{content}}</p>
            </div>
        {{/if}}
    {{/each}}
</div>
</section>
<!-- VIDEO -->
<section class="container mx-auto px-6 pb-28">
<div class="relative group w-[80%] mx-auto">
    <video
    src="{{HomeDB.section.video.src}}"
    alt="About Us"
    class="w-full rounded-xl"
    id="about-video"
    >
    {{HomeDB.section.video.err}}
    </video>
    <div
    id="about-video-thumbnail"
    class="absolute top-0 left-0 w-full h-full bg-no-repeat bg-cover rounded-xl grid place-content-center z-30 bg-[url(/assets/images/demos/1.jpg)]"
    >
    <button
        class="text-white w-10 h-10 text-[20px] md:w-[80px] md:h-[80px] md:text-[40px] bg-[#ffffff96] grid place-content-center border-2 rounded-full outline-none hover:!opacity-100 duration-200"
        id="play-about-video"
    >
        <i class="fa-solid fa-play"></i>
    </button>
    </div>
</div>
</section>
