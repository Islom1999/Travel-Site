<header>
    <div
        class="splide h-[200px] sm:h-[300px] md:h-[400px] relative overflow-hidden"
        id="my-splide"
    >
        <div
        class="splide__arrows splide__arrows--ltr text-white text-[20px] lg:text-[30px]"
        >
        <button
            class="splide__arrow splide__arrow--prev absolute top-1/2 -translate-y-1/2 left-7 z-10"
            type="button"
            aria-label="Previous slide"
            aria-controls="splide01-track"
        >
            <i class="fa-solid fa-arrow-left"></i>
        </button>
        <button
            class="splide__arrow splide__arrow--next absolute top-1/2 -translate-y-1/2 right-7 z-10"
            type="button"
            aria-label="Next slide"
            aria-controls="splide01-track"
        >
            <i class="fa-solid fa-arrow-right"></i>
        </button>
        </div>
        <div class="splide__track">
        <div class="splide__list flex">
            {{#each slider}}
                <div
                class="splide__slide h-[200px] sm:h-[300px] md:h-[400px] min-w-full md:min-w-[50%] lg:min-w-[33.3333%]"
                >
                <img
                    src="{{img}}"
                    alt="Slider Image 1"
                    class="object-cover h-full w-full"
                />
                </div>
            {{/each}}
        </div>
        </div>
    </div>
</header>
<section>
<div class="px-6 py-20">
    <div
    class="flex flex-col justify-between space-y-10 xl:space-y-0 xl:flex-row"
    >
    <div class="w-full xl:w-[50%]">
        <h3 class="text-[20px] text-main-gray-100 w-[80%]">
            {{ServicesDB.title}}
        </h3>
        <div class="flex mt-8 text-[15px] text-main-gray-100">
        <div class="w-full">
            <div class="flex w-full pb-3">
            <h6
                class="w-[80%] text-[13px] font-semibold uppercase pb-5"
            >
                {{ServicesDB.content.cost}}
            </h6>
            <h6
                class="w-[20%] text-[13px] font-semibold uppercase pb-5"
            >
                {{ServicesDB.content.amount}}
            </h6>
            </div>
            <ul>
                {{#each ServicesDB.cost}}
                    <li class="border-t py-3 border-gray-400 flex">
                        <p class="w-[80%]">
                        {{content}}
                        </p>
                        <p class="w-[20%]">{{amount}} So'm</p>
                    </li>
                {{/each}}
                    <li class="border-b border-gray-400"></li>
            </ul>
        </div>
        </div>
        <div class="flex justify-between items-center mt-5">
            <a
            href="{{url}}/services/{{ServicesDB.id}}"
            class="block w-fit px-6 py-[13px] mt-5 border border-main-green-100 hover:bg-main-green-100 hover:text-white duration-200"
            >
                {{ServicesDB.btn}}
            </a>
            <p class="text-[20px]">{{ServicesDB.allAmount}} So'm</p>
        </div>
    </div>
    <img
        src="{{ServicesDB.img}}"
        alt="Offer Image"
        class="w-full xl:w-[45%] object-cover"
    />
    </div>
</div>
<!-- ORDER FORM -->
<div class="md:w-[600px] lg:w-[1000px] mx-auto px-8 py-10 shadow-xl bg-gray-100">
    <form action="/payment/order/create" method="POST">
    <h1 class="text-center mb-10 text-[30px]">Tezkor buyurtma berish</h1>
    <div class="space-y-8">
    <div class="flex flex-col lg:flex-row justify-between space-y-8 lg:space-y-0 lg:space-x-10">
        <div class="space-x-3 w-full justify-center lg:w-1/2 flex">
        <div class="w-1/2">
            <input
            type="text"
            class="border p-3 w-full"
            id="firstName"
            name="firstName"
            placeholder="Eshmat"
            required
            />
            <label
            for="firstName"
            class="text-[12px] mt-3 ml-1"
            >Ismingiz</label>
        </div>
        <div class="w-1/2">
            <input
            type="text"
            class="border p-3 w-full"
            id="lastName"
            name="lastName"
            placeholder="Toshmatov"
            required
            />
            <label
            for="lastName"
            class="text-[12px] mt-3 ml-1"
            >Familiyangiz</label>
        </div>
        </div>
        <div class="w-full lg:w-1/2 flex flex-col">
        <input
            type="date"
            class="w-full h-[50px] border-2 p-3"
            id="date"
            name="date"
            required
        />
        <label
            for="date"
            class="text-[12px] mt-1 ml-1"
        >Kelish sanasi</label>
        </div>
    </div>
    <div class="flex flex-col lg:flex-row justify-between space-y-8 lg:space-y-0 lg:space-x-10">
        <div class="w-full lg:w-1/2 flex flex-col">
        <input
            required
            type="email"
            class="w-full h-[50px] border-2 p-3"
            id="email"
            placeholder="Eshmat@shermatov.com"
            name="email"
        />
        <label
            for="email"
            class="text-[12px] mt-1 ml-1"
        >Elektron Pochtangiz</label>
        </div>
        <div class="w-full lg:w-1/2 flex flex-col">
        <input
            required
            type="tel"
            class="w-full h-[50px] border-2 p-3"
            id="phone"
            placeholder="+1-696-938-9493"
            name="phone"
        />
        <label
            for="phone"
            class="text-[12px] mt-1 ml-1"
        >Telefon Raqamingiz</label>
        </div>
    </div>
    <div class="w-full flex flex-col">
        <input
        type="text"
        class="w-full h-[50px] border-2 p-3"
        id="date"
        placeholder="Termiz City"
        name="address"
        required
        />
        <label
        for="date"
        class="text-[12px] mt-1 ml-1"
        >City</label>
    </div>
    <div class="flex flex-col lg:flex-row justify-between space-y-8 lg:space-y-0 lg:space-x-10">
        <div class="w-full lg:w-1/2 flex flex-col">
        <input
            type="number"
            class="w-full h-[50px] border-2 p-3"
            id="guests"
            placeholder="12"
            name="peopleCount"
            required
        />
        <label
            for="guests"
            class="text-[12px] mt-1 ml-1"
        >Mehmonxonalar Soni</label>
        
        </div>
        <div class="w-full lg:w-1/2 flex flex-col">
        <select
            name="country"
            id="country"
            class="border-2 p-3"
            required
        >
            <option value="default" selected disabled>Mamlakatingizni tanlang</option>
        </select>
        </div>
    </div>
    </div>
    <div>
        <input id="total-body" class="my-5 text-[30px]" type="number" name="amount" value="{{ServicesDB.allAmount}}" hidden>

    </div>
    <h4 id="total-price" class="my-5 text-[30px]">${{ServicesDB.allAmount}}</h4>
    <button class="p-3 bg-[#30c2c2] hover:bg-[#32a5a5] text-white duration-500">Payme Orqali To'lash</button>
    <button class="p-3 bg-[#eaad00] hover:bg-[#a98215] text-white duration-500">Visa Orqali To'lash</button>
    </form>
</div>
</section>
